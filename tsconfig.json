{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": ["lib/**/*"],
    "exclude": ["build", "test"],
    "compilerOptions": {
        "target": "ES2019",
        "typeRoots": ["typings"],
        "outDir": "build",
        "types": ["node"],
        "allowJs": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
    }
  }
  